<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#96000000"
    android:layout_width="270dp"
    android:layout_height="350dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="20dp"
            android:textSize="20dp"
            android:text="Điều chỉnh màu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ImageButton
            android:src="@drawable/ic_cancel"
            android:background="@null"
            android:layout_marginLeft="45dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Độ sáng"
            android:layout_marginLeft="20dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        </TextView>
        <SeekBar
            android:id="@+id/seekBar_CLbrightness"
            android:layout_marginLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        </SeekBar>
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:text="Tương phản"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <SeekBar
            android:id="@+id/seekBar_CLcontrast"
            android:layout_marginLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        </SeekBar>
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:text="Dảy màu sắc"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <SeekBar
            android:id="@+id/seekBar_CLRange"
            android:layout_marginLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        </SeekBar>
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:text="Độ bảo hòa"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <SeekBar
            android:id="@+id/seekBar_CLsaturation"
            android:layout_marginLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        </SeekBar>
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:text="Gamma"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <SeekBar
            android:id="@+id/seekBar_CLgamma"
            android:layout_marginLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        </SeekBar>
    </LinearLayout>
</LinearLayout>
